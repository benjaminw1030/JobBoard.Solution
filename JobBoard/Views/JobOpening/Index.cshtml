@using JobBoard.Models;

<h1>List of available jobs:</h1>

@if (Model.Count == 0)
{
  <p>There are no jobs in the list.</p>
}
@foreach (JobOpening job in Model)
{
  <h4>@job.Title</h4>
  <p>@job.Description</p>
  <p>Contact information:</p>
  <ul>
    <li>@job.ContactInfo.Name</li>
    <li>@job.ContactInfo.Email</li>
    <li>@job.ContactInfo.PhoneNumber</li>
  </ul>
}

<form action="/">
  <button type="submit">Return to Home</button>
</form>

<form action="/jobs/new">
  <button type="submit">Add a Job</button>
</form>